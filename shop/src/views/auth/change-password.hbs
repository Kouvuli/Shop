<div id="login-form" class="login-page">
    <div class="form-box">

        <h1 class="tc">{{title}}</h1>

        <form
            method="post"
            action="/auth/change-password"
            id="login"
            class="input-group-login"
        >
            <input
                type="text"
                name="password"
                class="input-field"
                placeholder="Mật khẩu cũ"
                required
            />
            <input
                type="text"
                name="newPassword"
                class="input-field"
                placeholder="Mật khẩu mới"
                required
            />
            <input
                type="text"
                name="confirmPassword"
                class="input-field"
                placeholder="Nhập lại mật khẩu mới"
                required
            />
            <button type="submit" class="submit-btn">Đổi mật khẩu</button>

        </form>

    </div>
    <div>
        {{#if notMatch}}
            <div id="mess-content" class="center-box">Mật khẩu mới không khớp!</div>
        {{/if}}
        {{#if wrong}}
            <div id="mess-content" class="center-box">Mật khẩu không chính xác!</div>
        {{/if}}
    </div>
</div>