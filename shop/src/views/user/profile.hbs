<div class="personal-profile">
    <form>
        <label for="last-name">Tên</label>
        <input
            type="text"
            id="last-name"
            name="last-name"
            placeholder="Tên"
            value="{{data.name}}"
        />
        <br />
        <label for="last-name">Tên đăng nhập</label>
        <input
            type="text"
            id="last-name"
            name="last-name"
            placeholder="Tên"
            value="{{data.username}}"
        />
        <br />
        <label for="email">Email</label>
        <input
            type="email"
            id="email"
            name="email"
            placeholder="Email"
            value="{{data.email}}"
        />
        <br />
        <label for="address">Địa chỉ</label>
        <input
            type="text"
            id="address"
            name="address"
            placeholder="Địa chỉ"
            value="{{data.address}}"
        />
        <br />
        <label for="date-of-birth">Ngày sinh</label>
        <input
            type="text"
            id="date-of-birth"
            name="date-of-birth"
            placeholder="Ngày sinh"
            value="{{formatDate data.birthday}}"
        />
    </form>
</div>