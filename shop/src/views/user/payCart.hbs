<div style="padding-left: 35%;"><h1>Thông tin giao hàng</h1></div>
<div class="personal-profile">
    <form id="payment-form">
        <label for="last-name">Tên người nhận </label>
        <input
            value="{{user.name}}"
            type="text"
            id="name"
            name="name"
            placeholder="Tên"
            required
        />
        <br />
        <label for="phone">Số điện thoại</label>
        <input
            type="tel"
            id="phone"
            name="phone"
            placeholder="Số điện thoại"
            required
        />
        <br />
        <label for="email">Email</label>
        <input
        value={{user.email}}
            type="email"
            id="email"
            name="email"
            placeholder="Email"
            value="{{data.email}}"
            required
        />
        <br />
        <label for="address">Địa chỉ</label>
        <input
            value="{{user.address}}"
            type="text"
            id="address"
            name="address"
            placeholder="Địa chỉ"
            required
        />
        <br />
        <label for="mess">Nội dung tin nhắn</label>
        <input
            type="text"
            id="mess"
            name="mess"
            placeholder="Nội dung tin nhắn"
        />
        <br />
        <label for="payCart" class="pay">Hình thức thanh toán</label>
        <select class="payment-method" name="method" value="cod">
            <option value="cod">Thanh toán khi nhận hàng (COD)</option>
            <option value="momo">Thanh toán qua MoMo</option>
            <option value="zalopay">Thanh toán qua ZaloPay</option>
            <option value="bank">Chuyển khoản ngân hàng</option>
        </select>
    </form>
</div>

<!--Cart Section-->
<br>
<div style="padding-left: 45%;"><h2>Đơn hàng</h2></div>
<section class="mt-5">
    <div class="container">
        <div class="cart">
            <div class="table-responsive">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col" class="text-white">Tên sản phẩm</th>
                            <th scope="col" class="text-white">Giá</th>
                            <th scope="col" class="text-white">Số lượng</th>
                            <th scope="col" class="text-white">Tổng tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each data.list}}
                        <tr>
                            <td>
                                <div class="main">
                                    <div class="d-flex">
                                        <!--W=145 H=98--> <img
                                            src={{this.img}} alt="">
                                    </div>
                                    <div class="des">
                                        <p>{{this.name}}</p>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <h6>{{this.currentPrice}}</h6>
                            </td>
                            <td>
                                <!--
                                <div class="counter">
                                    <i class='bx bxs-down-arrow'></i>
                                    <input class="input-number" type="text" value="1" min="0" max="10">
                                    <i class='bx bxs-up-arrow'></i>
                                </div>
                                -->
                                <h6>{{this.quantity}}</h6>

                            </td>
                            <td>
                                <h6>{{this.totalPrice}}</h6>
                            </td>
                        </tr>
                        <!----->
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>


<div class="checkout">
    <ul>
            <li class="cart-total">Tổng cộng
            <span>{{data.cost}}</span>
        </li>
    </ul>
    <button  class="btn-flat btn-hover pay-btn">Thanh toán</button>
</div>

