<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VVTStore</title>
    <!-- boxicons -->
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <!-- app css -->
    <link rel="stylesheet" href="/css/grid.css">
    <link rel="stylesheet" href="/css/app.css">
</head>

<body>

    <!-- header -->
    <header>
        <!-- mobile menu -->
        <div class="mobile-menu bg-second">
            <a href="/" class="mb-logo">VVTStore</a>
            <span class="mb-menu-toggle" id="mb-menu-toggle">
                <i class='bx bx-menu'></i>
            </span>
        </div>
        <!-- end mobile menu -->
        <!-- main header -->
        <div class="header-wrapper" id="header-wrapper">
            <span class="mb-menu-toggle mb-menu-close" id="mb-menu-close">
                <i class='bx bx-x'></i>
            </span>
            <!-- mid header -->
            <div class="bg-main">
                <div class="mid-header container">
                    <a href="/" class="logo">VVTStore</a>
                    <div class="search">
                        <input type="text" placeholder="Search">
                        <i class='bx bx-search-alt'></i>
                    </div>
                    <ul class="user-menu">
                        <li><a href="/tai-khoan/thong-bao"><i class='bx bx-bell'></i></a></li>
                        <li><a href="/tai-khoan/ho-so-ca-nhan"><i class='bx bx-user-circle'></i></a></li>
                        <li><a href="/tai-khoan/gio-hang"><i class='bx bx-cart'></i></a></li>
                    </ul>
                </div>
            </div>
            <!-- end mid header -->
            <!-- bottom header -->
            <div class="bg-second">
                <div class="bottom-header container">
                    <ul class="main-menu">
                        <li ><a href="/">Trang chủ</a></li>
                        <!-- mega menu -->
                        <li class="mega-dropdown">
                            <a href="/category/tat-ca-san-pham">Sản phẩm<i class='bx bxs-chevron-down'></i></a>
                            <div class="mega-content">
                                <div class="row">
                                    <div class="col-3 col-md-12">
                                        <div class="box">
                                            <h3><a href="/category/tai-nghe">Tai nghe</a></h3>
                                            <ul>
                                                <li><a href="#">Tai nghe True Wireless</a></li>
                                                <li><a href="#">Tai nghe Earbud</a></li>
                                                <li><a href="#">Tai nghe Bluetooth</a></li>
                                                <li><a href="#">Tai nghe Noise Cancelling</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="col-3 col-md-12">
                                        <div class="box">
                                            <h3><a href="/category/may-nghe-nhac">Máy nghe nhạc</a></h3>
                                            <ul>
                                                <li><a href="#">Máy nghe nhạc Aune</a></li>
                                                <li><a href="#">Máy nghe nhạc Benjie</a></li>
                                                <li><a href="#">Máy nghe nhạc Cayin</a></li>
                                                <li><a href="#">Máy nghe nhạc Colorfly</a></li>
                                                <li><a href="#">Máy nghe nhạc Cowon</a></li>
                                                <li><a href="#">Máy nghe nhạc FiiO</a></li>
                                                <li><a href="#">Máy nghe nhạc HiBy</a></li>
                                                <li><a href="#">Máy nghe nhạc Hidizs</a></li>
                                                <li><a href="#">Máy nghe nhạc Hifiman</a></li>
                                                <li><a href="#">Máy nghe nhạc iBasso</a></li>
                                            </ul>
                                    
                                        </div>
                                    </div>
                                    <div class="col-3 col-md-12">
                                        <div class="box">
                                            <h3><a href="/category/loa">Loa</a></h3>
                                            <ul>
                                                <li><a href="#">Loa Ultimate Ears</a></li>
                                                <li><a href="#">Loa Astell&Kern</a></li>
                                                <li><a href="#">Loa Bose</a></li>
                                                <li><a href="#">Loa Creative</a></li>
                                                <li><a href="#">Loa Edifier</a></li>
                                                <li><a href="#">Loa Harman Kardon</a></li>
                                                <li><a href="#">Loa JBL</a></li>
                                                <li><a href="#">Loa Marshall</a></li>
                                                <li><a href="#">Loa Skullcandy</a></li>
                                                <li><a href="#">Loa Sony</a></li>
                                                <li><a href="#">Loa LG</a></li>
                                                <li><a href="#">Loa SMSL</a></li>
                                    
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="col-3 col-md-12">
                                        <div class="box">
                                            <h3><a href="/category/microphone">Microphone</a></h3>
                                            <ul>
                                                <li><a href="#">Microphone Razer</a></li>
                                                <li><a href="#">Microphone Kingston HyperX</a></li>
                                                <li><a href="#">Microphone Audio-technica</a></li>
                                                <li><a href="#">Microphone AKG</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    
                                </div>
                                <div class="row img-row">
                                    <div class="col-3">
                                        <div class="box">
                                            <img src="/images/Tai_nghe.png" alt="Tai nghe">
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="box">
                                            <img src="/images/May_nghe_nhac.png" alt="Máy nghe nhạc">
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="box">
                                            <img src="/images/Loa.jpg" alt="Loa">
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="box">
                                            <img src="/images/Microphone.jpg" alt="Microphone">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                        <!-- end mega menu -->
                        <li><a href="/gioi-thieu">Giới thiệu</a></li>
                        <li><a href="/lien-he">Liên hệ</a></li>
                    </ul>
                </div>
            </div>
            <!-- end bottom header -->
        </div>
        <!-- end main header -->
    </header>
    <!-- end header -->

    <!-- hero section -->
    {{{body}}}
    <!-- end blogs -->

    <!-- footer -->
    <!-- footer -->
    {{> footer}}
    <!-- end footer -->

    <!-- app js -->
    <script src="/js/app.js"></script>
    <script src="/js/index.js"></script>

</body>

</html>