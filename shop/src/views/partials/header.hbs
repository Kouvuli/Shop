            </div>
        </div>
        <!-- end mid header -->
        <!-- bottom header -->
        <div class="bg-second">
            <div class="bottom-header container">
                <ul class="main-menu">
                    <li><a href="/">Trang chủ</a></li>
                    <!-- mega menu -->
                    {{> dropdown}}
                    <!-- end mega menu -->
                    <li><a href="/gioi-thieu">Giới thiệu</a></li>
                    <li><a href="/lien-he">Liên hệ</a></li>
                </ul>
            </div>
        </div>
