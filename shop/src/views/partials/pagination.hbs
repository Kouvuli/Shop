<nav>
    <div class="pagination">
        <ul >
            <li class="{{#unless (showPrev this.pagination)}} disabled {{/unless}}">
                <a class="page-link" href="?page={{{prevPage
                            this.pagination.page
                        }}}&perPage={{{this.pagination.perPage}}}" tabindex="-1"><i class='bx bxs-chevron-left'></i></a>
            </li>
            {{#if (showPrevDots this.pagination)}}
            <li ><a  href="?page=1&perPage={{{this.pagination.perPage}}}">1</a></li>
            <li ><a >...</a></li>
            {{/if}}
            {{#if (showPrev this.pagination)}}
            <li ><a href="?page={{{prevPage
                                this.pagination.page
                            }}}&perPage={{{this.pagination.perPage}}}">{{{prevPage this.pagination.page}}}</a></li>
            {{/if}}
            <li ><a class="active"
                    href="?page={{{this.pagination.page}}}&perPage={{{this.pagination.perPage}}}">{{{this.pagination.page}}}</a>
            </li>
        
            {{#if (showNext this.pagination)}}
            <li ><a href="?page={{{nextPage
                                this.pagination.page
                            }}}&perPage={{{this.pagination.perPage}}}">{{{nextPage this.pagination.page}}}</a></li>
            {{/if}}
            {{#if (showNextDots this.pagination)}}
            <li ><a >...</a></li>
            <li ><a 
                    href="?page={{{this.pagination.limit}}}&perPage={{{this.pagination.perPage}}}">{{{this.pagination.limit}}}</a>
            </li>
            {{/if}}
        
            <li class="{{#unless (showNext this.pagination)}} disabled {{/unless}}">
                <a  href="?page={{{nextPage
                            this.pagination.page
                        }}}&perPage={{{this.pagination.perPage}}}"><i class='bx bxs-chevron-right'></i></a>
            </li>
        
        </ul>
    </div>
    
</nav>