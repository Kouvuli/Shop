<div class="container-fluid">
    <div class="row justify-content-md-center mt-5">
        <div class="col col-lg-4">
            <h1 class="text-center login-title">Tạo giảm giá</h1>
            <div class="account-wall">
                <form method="POST">
                    <div class="form-group">
                        <label>Tên của đợt giảm giá<span
                                class="text-danger"
                            >*</span></label>
                        <input name="name" type="text" class="form-control" />
                        <div class="invalid-feedback">
                            Vui lòng điền tên
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Phần trăm được giảm<span
                                class="text-danger"
                            >*</span></label>
                        <div class="input-group">

                            <input type="text" class="form-control" required />
                            <div class="input-group-append">
                                <span class="input-group-text">%</span>
                            </div>
                            <div class="invalid-feedback">
                                Vui lòng điền giá trị phần trăm được giảm
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>ID của người nhận
                            <span class="text-danger">(Để trống nếu dành cho tất
                                cả người dùng)</span></label>
                        <input
                            name="password"
                            type="password"
                            class="form-control"
                        />
                    </div>
                    <div class="row justify-content-md-center"><button
                            class="btn btn-primary"
                            type="submit"
                        >
                            Tạo</button></div>
                </form>
            </div>

        </div>
    </div>
</div>