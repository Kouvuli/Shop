<div class="container-fluid">
    <div class="row justify-content-md-center mt-5">
        <div class="col col-lg-4">
            <h1 class="text-center login-title">Thêm sản phẩm</h1>
            <div class="account-wall">
                <form
                    method="post"
                    class="needs-validation"
                    novalidate
                    enctype="multipart/form-data"
                >
                    <div class="form-group">
                        <label
                            for="validationProductName"
                            class="form-label"
                        >Tên sản phẩm<span class="text-danger">*</span></label>
                        <input
                            value="{{product.name}}"
                            name="name"
                            type="text"
                            class="form-control"
                            id="validationProductName"
                            required
                        />
                        <div class="invalid-feedback">
                            Vui lòng nhập tên sản phẩm
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="validationCateName" class="form-label">Tên
                            danh mục<span class="text-danger">*</span></label>
                        <input
                            value="{{product.category.type}}"
                            name="categoryType"
                            type="text"
                            class="form-control"
                            id="validationCateName"
                            required
                        />
                        <div class="invalid-feedback">
                            Vui lòng nhập tên danh mục
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="description" class="form-label">Mô tả<span
                                class="text-danger"
                            >*</span></label>
                        <input
                            value="{{product.description}}"
                            name="description"
                            type="text"
                            class="form-control"
                            id="description"
                            required
                        />
                        <div class="invalid-feedback">
                            Vui lòng nhập mô tả
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="manufacturer" class="form-label">Hãng sản
                            xuất<span class="text-danger">*</span></label>
                        <input
                            value="{{product.manufacturer.name}}"
                            name="manufacturer"
                            type="text"
                            class="form-control"
                            id="manufacturer"
                            required
                        />
                        <div class="invalid-feedback">
                            Vui lòng nhập tên hãng sản xuất
                        </div>
                    </div>

                    <div class="form-row">

                        <div class="custom-file col-md-5 mb-5">
                            <div class="input-group">
                                <label for="image">Ảnh 1<span
                                        class="text-danger"
                                    >*</span></label>
                                <input
                                    value="{{image1}}"
                                    name="image"
                                    type="file"
                                    id="image"
                                />
                            </div>
                        </div>
                        <div class="col-md-2 mb-3"></div>
                        <div class="custom-file col-md-5 mb-3">
                            <div class="input-group">
                                <label for="image">Ảnh 2<span
                                        class="text-danger"
                                    >*</span></label>
                                <input
                                    value="{{image2}}"
                                    name="image"
                                    type="file"
                                    id="image"
                                />
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            <label>Giá nhập<span
                                    class="text-danger"
                                >*</span></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">$</span>
                                </div>
                                <input
                                    value="{{product.originPrice}}"
                                    name="originPrice"
                                    type="number"
                                    min="0"
                                    class="form-control"
                                    required
                                />
                                <div class="invalid-feedback">
                                    Vui lòng điền giá, giá phải lớn hơn 0
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label>Giá bán hiện tại<span
                                    class="text-danger"
                                >*</span></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">$</span>
                                </div>
                                <input
                                    value="{{product.currentPrice}}"
                                    name="currentPrice"
                                    type="number"
                                    min="0"
                                    class="form-control"
                                    required
                                />
                                <div class="invalid-feedback">
                                    Vui lòng điền giá, giá phải lớn hơn 0
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label>Số lượng nhập vào<span
                                    class="text-danger"
                                >*</span></label>
                            <div class="input-group">
                                <input
                                    value="{{product.quantity}}"
                                    name="quantity"
                                    type="number"
                                    min="0"
                                    class="form-control"
                                    required
                                />
                                <div class="invalid-feedback">
                                    Vui lòng điền giá, giá phải lớn hơn 0
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-md-center"><button
                            class="btn btn-primary"
                            type="submit"
                        >
                            Thêm</button></div>
                </form>
            </div>

        </div>
    </div>
</div>