<div class="container-fluid">
    <div class="row justify-content-md-center mt-5">
        <div class="card col-5">
            {{!-- <img
                class="card-img-top"
                src="{{data.avatar}}"
                alt="{{data.avatar}}"
            /> --}}

            <div class="card-body">
                <h5 class="card-title">{{data.name}}</h5>
                <p class="card-text">@{{data.username}}</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Email: {{data.email}}</li>
                <li class="list-group-item">Ngày tạo:
                    {{formatDate data.createdAt}}</li>
                <li class="list-group-item">Địa chỉ:
                    {{data.address}}</li>
                <li class="list-group-item">Ngày tạo:
                    {{formatDate data.birthday}}</li>
                <li class="list-group-item">Trạng thái:
                    {{resolveStatus data.active}}</li>
            </ul>
        </div>
    </div>
</div>